{
    "compilerOptions": {
        "allowJs": true,
        "listFiles": false,
        "sourceMap": true,
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "exclude": ["node_modules"],
    "include": ["src", "tests", "javascript/src/index.ts"]
}
